<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_books_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ui.myBooks.MyBooksFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/borrowed_books_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_haven_t_borrowed_any_books_yet"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/borrowed_books_list"
                app:layout_constraintEnd_toEndOf="@+id/borrowed_books_list"
                app:layout_constraintStart_toStartOf="@+id/borrowed_books_list"
                app:layout_constraintTop_toBottomOf="@+id/borrowed_books_text"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/lent_books_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_haven_t_lent_out_any_books_yet"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/lent_list"
                app:layout_constraintEnd_toEndOf="@+id/lent_list"
                app:layout_constraintStart_toStartOf="@+id/lent_list"
                app:layout_constraintTop_toBottomOf="@+id/lent_books_text"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/owned_books_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_books_you_own_with_the_button_below"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/my_books_list"
                app:layout_constraintEnd_toEndOf="@+id/my_books_list"
                app:layout_constraintStart_toStartOf="@+id/my_books_list"
                app:layout_constraintTop_toBottomOf="@+id/owned_books_text"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/lent_books_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lentBooksTitle"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/borrowed_books_list" />

            <TextView
                android:id="@+id/borrowed_books_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/borrowed_books"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/borrowed_books_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:scrollbars="none"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/borrowed_books_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:scrollbars="none"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lent_books_text" />

            <TextView
                android:id="@+id/owned_books_text"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/owned_books"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lent_list" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_books_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:scrollbars="none"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/owned_books_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/add_book"
        android:src="@drawable/ic_add"
        android:translationZ="90dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/add_book_floating_button"
        app:layout_constraintEnd_toEndOf="@+id/add_book_floating_button"
        app:layout_constraintStart_toStartOf="@+id/add_book_floating_button"
        app:layout_constraintTop_toTopOf="@+id/add_book_floating_button"
        app:tint="?attr/colorPrimaryVariant" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_book_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:contentDescription="@string/add_book_heading"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
